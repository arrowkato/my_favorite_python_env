{
    "name": "Python Project",
    // Remote Container でのコンテナ名
    "service": "my_favorite_python_env",
    "dockerComposeFile": "../docker-compose.yml",
    "workspaceFolder": "/app",
    // Remote Container使用時のコンテナ内でVS Codeにインストールする拡張機能
    "extensions": [
        "ms-python.python", // 何はなくともVS Code公式のpython拡張機能
        "oderwat.indent-rainbow", // indentを見やすく
        "bungcip.better-toml", // toml のSyntax highlight
        "ms-azuretools.vscode-docker"
    ],
    "remoteUser": "ubuntu",
    "settings": {
        "editor.tabsize": 2
    }
}
